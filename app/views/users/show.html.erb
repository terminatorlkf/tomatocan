<style>
.other-conversation-section {
  padding-left:0;
  padding-right:0;
}

.conversation-card {
  border: 1px solid;
  border-color: rgba(213, 213, 213, 1);
}

.conversation-card-title {
  padding-top:10px;
  padding-left:10px;
  padding-right:10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.conversation-card-content{
  padding-top: 7px;
}

.conversation-card-actions {
  display: flex;
  justify-content: flex-end;
}

.conversation-card-actions button {
  margin-right:10px;
  margin-bottom: 10px;
  padding: 5px 10px 5px 10px;
  border-radius:5px;
}

.conversation-card p{
  padding-left:10px;
}

</style>

<div class="container-fluid" >
  <% if request.host == "thinqtv.herokuapp.com" %>

    <!-- Meta Tags for Facebook sharing -->
    <% content_for :head do %>
      <meta property="og:url"           content="<%= "https://thinqtv.herokuapp.com" + user_profile_path(@user.permalink) %>" />
      <meta property="og:type"          content="website" />
      <meta property="og:title"         content="Join <%= @user.permalink %>'s Conversation" />
      <meta property="og:description"   content="<%= @user.permalink %>'s Conversation is happening right now!" />
      <% if @user.profilepic.present? %>
        <meta property="og:image"       content="<%= @user.profilepic.url.to_s %>" />
      <% else %>
        <meta property="og:image"       content="http://www.thinq.tv/logoDigitalHollow300.png" />
      <% end %>
    <% end %>

      <div class="row" style="padding-top:45px; margin-left:-60px; margin-right:-60px;">
        <div class="col-md-4">
          <div style="padding: 0px 0px 5px 0px">
            <%= render 'layouts/merchsidebar' %>
          </div>

      <!-- Invite Area -->
      <div style = "padding: 3px 5px 7px 5px; font-size: 18px; background-color: #F2EBE4">
        <b>Invite friends to join this conversation</b>
        <div style = "font-size: 15px; margin-left: 7px">
          Invite via E-Mail:
        </div>
        <a href="mailto:? &subject=Come%20join%20this%20conversation%20on%20thinQ.tv! &body=Come%20join%20me%20in%20this%20conversation%20at%20https://thinqtv.herokuapp.com/youronlinemom" style="font-size: 15px; color: white; margin-left: 17px; background-color: #8C1D40; padding: 3px 5px 3px 5px; border-radius: 3px">E-Mail &#9993</a>
          
        <div style = "font-size: 15px; margin-left: 7px; padding-top: 5px">
          Invite via SMS:
        </div>
        <a href="sms: &body=Come%20join%20me%20in%20this%20conversation%20at%20https://thinqtv.herokuapp.com/youronlinemom" style="font-size: 15px; color: white; margin-left: 17px; background-color: #8C1D40; padding: 3px 5px 3px 5px; border-radius: 3px">SMS &#9743</a>

          <div style = "font-size: 15px; margin-left: 7px; padding-top: 5px">
            Invite via social media: 
          </div>

        <% domainurl = "https://thinqtv.herokuapp.com/youronlinemom" %>
        <!--THIS IS A RUBY APPLICATION!!! Please figure out how to code popup boxes in Ruby, not html. Images should be ASSETS, not urls to remote images we do not control-->
        <div style="margin-left: 17px">
          <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= @surl %>"
            onclick="window.open('https://www.linkedin.com/shareArticle?mini=true&url=<%= @surl %>',
            'newwindow', 'width=600,height=400,top=100,left=300'); return false;">
            <img src="https://static.licdn.com/sc/h/eahiplrwoq61f4uan012ia17i" alt="LinkedIn" style="width:25px; height:25px; border-radius: 4px" />
          </a>&nbsp
          <a href="http://www.facebook.com/sharer.php?u=<%= domainurl %>" 
            onclick="window.open('http://www.facebook.com/sharer.php?u=<%= domainurl %>',
            'newwindow', 'width=600,height=400,top=100,left=300'); return false;">
            <img src="https://www.facebook.com/images/fb_icon_325x325.png" alt="Facebook" style="margin-left: -4px; width:25px; height:25px; border-radius: 4px" />
          </a>&nbsp
          <a href="https://twitter.com/intent/tweet?text=Come%20join%20the%20conversation%20on%20thinQ.tv%20at%20https://thinqtv.herokuapp.com/youronlinemom"
            onclick="window.open('https://twitter.com/intent/tweet?text=Come%20join%20the%20conversation%20on%20thinQ.tv%20at%20https://thinqtv.herokuapp.com/youronlinemom,'
            'newwindow', 'width=600,height=400,top=80,left=300'); return false;">
            <img src="https://about.twitter.com/etc/designs/about-twitter/public/img/apple-touch-icon-72x72.png" alt="Twitter" style="margin-left:-4px; width:25px; height:25px;border-radius:4px;">
          </a><br>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <%= render 'layouts/jitsi' %>
        <div class="container">
          <a href="#demo" class="btn btn-info" data-toggle="collapse" style="background-color: #8C1D40; font-size: 18px; ">If you're not seeing or hearing the Live Conversation in the viewer above &#9660 </a>
            <div id="demo" class="collapse" style="font-size: 13px; padding-left: 5px">
              <p>- Are you using Safari or Edge? Close that and use Chrome or Firefox. - or -<br>
              - Reload the page. (Press F5) - or -<br>
              - If you have slow wifi, turn off your camera. (Click on the camera icon above) - or -<br>
              - Turn up the volume on your speakers. - or - <br>
              - Update Chrome or Firefox to the latest version. - or - <br>
              - Download the JITSI Meet app onto your phone and join the THINQTV chatroom on the app. - or -<br>
              - Call in on your phone: 1.512.402.2718 PIN: 968 707 817# (For audio only)<br>
              - You may also type in the chat - click on the Open/Close Chat icon next to the hand above.<br>
            </div>
        </div>
        <br>
      </div>
    </div>

  <% else %>
  
    <!-- Meta Tags for Facebook Share -->
    <% content_for :head do %>
      <meta property="og:url"           content="<%= "http://www.thinq.tv" + user_profile_path(@user.permalink) %>" />
      <meta property="og:type"          content="website" />
      <meta property="og:title"         content="View <%= @user.name %>'s profile on ThinQ.tv" />
      <meta property="og:description"   content="Connect with <%= @user.permalink %> in talking about <%= @user.genre1 %>, <%= @user.genre2 %>, <%= @user.genre3 %>" />
      <% if @user.profilepic.present? %>
        <meta property="og:image"       content="<%= @user.profilepic.url.to_s %>" />
      <% else %>
        <meta property="og:image"       content="http://www.thinq.tv/logoDigitalHollow300.png" />
      <% end %>
    <% end %>

    <%= render 'layouts/authorform' %>
    <% if @displayconvo.present? && @displayconvo.usrid == @user.id %>
      <div id="eventCurrentdiv" style="text-align: center;">
        <h3>We're talking about <%= @displayconvo.name %></h3>  
        <p> right NOW!   </p> 
        <%= link_to " Join LIVE Conversation ", "https://thinQtv.herokuapp.com/" + @user.permalink, class: "btn btn-primary btn-lg fa fa-video-camera", style: "margin-top: 10px; margin-bottom: 10px; border-radius: 5px; font-size: 30px" %>
        <br>
      </div>
    <% else %>
      <div class="row" style="padding-top:15px;padding-bottom:30px;">
        <%= render 'layouts/streamButton' %>
      </div>
    <% end %>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= value %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-4">
        <%= render 'layouts/merchsidebar' %>
      </div>
      <div class="col-md-8">
        <% if @events.present? %>
          <%= render 'layouts/maincalendar', collection: @events %><br>
        <% end %>
      </div>

      <div style='margin-top: 3rem;'>
        <h4>Check out other conversations that are going on right now</h4>

        <div class="row other-conversation-section">
          <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="conversation-card">
              <div class="conversation-card-title">
                <a id='calendar-event'>Lisa Schaefer</a>
                <div class="conversation-card-title-time">
                  <p style='margin-bottom: 0'>Thu, May 28</p>
                  <p>10:00 PM Eastern Daylight Time<p>
                </div>  <!-- conversation-card-title-time -->
              </div> <!-- conversation-card-title -->

              <div class="conversation-card-content">
                <p>Let's talk about Immigration</p>
              </div> <!-- conversation-card-content -->

              <div class="conversation-card-actions">
                <button>Join conversation right now</button>
              </div> <!-- conversation-card-actions -->
            </div> <!-- conversation-card -->
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
